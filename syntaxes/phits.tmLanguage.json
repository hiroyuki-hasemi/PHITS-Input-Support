{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PHITS",
	"patterns": [
		{
			"include": "#section"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#num"
		}
	],
	"repository": {
		"section": {
			"patterns": [{
				"match": "^\\[.*?\\]",
				"name": "constant.character"
				}
			]
		},
		"comments":{
			"patterns": [{
				"match": "#.*",
				"name": "comment.line"
				}
			]
		},
		"num":{
			"patterns": [{
				"match": "-?[0-9]+",
				"name" : "constant.numeric"
			}]
		}
	},
	"scopeName": "sample.inp"
}