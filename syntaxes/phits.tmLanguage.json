{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PHITS",
	"scopeName": "sample.inp",
	"patterns": [
		{
			"include": "#statments"
		}
	],
	"repository": {

		"statments":
		{
			"patterns": [
				{
					"include": "#full_line_comment"
				},
				{
					"include": "#section_off"
				},
				{
					"include": "#section"
				},
				{
					"include": "#except_cell"
				},
				{
					"include": "#mat"
				},
				{
					"include": "#transform"
				},
				{
					"include": "#infl"
				},
				{
					"include": "#set"
				},
				{
					"include": "#const"
				},
				{
					"include": "#num"
				},
				{
					"include": "#intrinsic_function"
				},
				{
					"include": "#const_pi"
				},
				{
					"include": "#inline_comment"
				}
			]
		},

		"full_line_comment": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "^[\\$\\#\\!\\%].*$|^[cC] .*$"
				}
			]
		},

		"section": {
			"patterns": [
				{
					"name": "constant.character",
					"match": "^\\[.+\\]"
				}
			]
		},

		"section_off": {
			"patterns": [
				{
					"name": "invalid.illegal",
					"match": "^\\[.+\\]off"
				}
			]
		},

		"num": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "-?[0-9]+\\.?[0-9]*[eE]?[-\\+]?[0-9]*"
				}
			]
		},

		"mat": {
			"patterns": [
				{
					"name": "string.quoted.double",
					"match": "[mM][0-9]+\\s+|[mM][tT][0-9]+\\s+|[mM][aA][tT]\\["
				}
			]
		},

		"transform": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "\\*?[tT][rR][0-9]+\\s+"
				}
			]
		},

		"infl": {
			"patterns": [
				{
					"name": "constant.regexp",
					"match": "infl:"
				}
			]
		},

		"set": {
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "set:"
				}
			]
		},

		"const": {
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "[cC][0-9]+"
				}
			]
		},

		"intrinsic_function": {
			"patterns": [
				{
					"name": "support.function",
					"match": "float|int|abs|exp|log|log10|max|min|mod|nint|sign|sqrt|acos|asin|atan|atan2|cos|cosh|sin|sinh|tan|tanh"
				}
			]
		},

		"const_pi": {
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "[pP][iI]"
				}
			]
		},
		
		"except_cell": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\#\\(?[-0-9]+"
				}
			]

		},

		"inline_comment": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "[\\$\\#\\!\\%].*"
				}
			]
		},
		"inline_comment_cell": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "[\\$\\!\\%].*"
				}
			]
		}
	}
}