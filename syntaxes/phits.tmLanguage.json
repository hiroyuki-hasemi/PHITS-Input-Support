{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PHITS",
	"scopeName": "sample.inp",
	"patterns": [
		{
			"include": "#statments"
		}
	],
	"repository": {

		"statments":
		{
			"patterns": [
				{
					"include": "#full_line_comment"
				}
			]
		},

		"full_line_comment": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "^[cC\\$\\#].*$"
				}
			]
		},
		"inline_comment": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "[\\$\\#].*"
				}
			]
		},
		"inline_comment_cell": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "[\\$].*"
				}
			]
		}
	}
}